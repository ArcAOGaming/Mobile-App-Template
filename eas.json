{
    "cli": {
        "version": ">= 12.0.0",
        "appVersionSource": "local"
    },
    "build": {
        "development": {
            "developmentClient": true,
            "distribution": "internal"
        },
        "preview": {
            "distribution": "internal"
        },
        "production": {
            "autoIncrement": true,
            "android": {
                "buildType": "apk"
            },
            "ios": {
                "buildConfiguration": "Release"
            }
        }
    },
    "submit": {
        "production": {
            "android": {
                "serviceAccountKeyPath": "./google-service-account-key.json",
                "track": "internal"
            },
            "ios": {
                "appleId": "$APPLE_ID",
                "ascAppId": "$ASC_APP_ID",
                "appleTeamId": "$APPLE_TEAM_ID"
            }
        }
    }
}